<!-- 폴더 이동 -->  
<update id="updateFolder">
    UPDATE INTEREST_BOARD
    SET FOLDER_NO = #{folderNo}
    WHERE BOARD_NO = #{boardNo} OR ECO_BOARD_NO = #{ecoBoardNo} OR MOIZA_NO = #{moizaNo}

</update>

  
  
